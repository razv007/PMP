import pymc as pm
import numpy as np
import arviz as az
import pandas as pd

data = np.array([56, 60, 58, 55, 57, 59, 61, 56, 58, 60])

freq_mean = data.mean()
freq_std = data.std(ddof=1)

print(f"Frequentist Sample Mean (xÌ„): {freq_mean:.2f}")
print(f"Frequentist Sample Std Dev (s): {freq_std:.2f}")

with pm.Model() as model_weak:
    mu = pm.Normal('mu', mu=freq_mean, sigma=10)

    sigma = pm.HalfNormal('sigma', sigma=10)

    X_obs = pm.Normal('X_obs', mu=mu, sigma=sigma, observed=data)

with model_weak:
    trace_weak = pm.sample(2000, tune=1000, chains=4, cores=1,
                           return_inferencedata=True, random_seed=42)

summary_weak = az.summary(trace_weak, hdi_prob=0.95)
print("--- Bayesian Estimates (Weak Priors) ---")
print(summary_weak)


with pm.Model() as model_strong:
    mu_strong = pm.Normal('mu', mu=50, sigma=10)

    sigma_strong = pm.HalfNormal('sigma', sigma=10)

    X_obs_strong = pm.Normal('X_obs', mu=mu_strong, sigma=sigma_strong,
                              observed=data)
with model_strong:
    trace_strong = pm.sample(2000, tune=1000, chains=4, cores=1,
                             return_inferencedata=True)

summary_strong = az.summary(trace_strong, hdi_prob=0.95)
print("\n--- Bayesian Estimates (Strong Priors) ---")
print(summary_strong)
  
