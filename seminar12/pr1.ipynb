import pandas as pd
import numpy as np
import pymc as pm
import arviz as az
import matplotlib.pyplot as plt

try:
    df = pd.read_csv('date_promovare_examen.csv')
except FileNotFoundError:
    np.random.seed(42)
    n_samples = 100
    ore_studiu = np.random.normal(20, 5, n_samples)
    ore_somn = np.random.normal(7, 1.5, n_samples)
    z = -10 + 0.5 * ore_studiu + 0.3 * ore_somn
    prob = 1 / (1 + np.exp(-z))
    promovare = (np.random.rand(n_samples) < prob).astype(int)
    df = pd.DataFrame({'Ore_Studiu': ore_studiu, 'Ore_Somn': ore_somn, 'Promovare': promovare})

X = df[['Ore_Studiu', 'Ore_Somn']].values
y = df['Promovare'].values

print("--- EXERCIȚIUL A ---")

counts = df['Promovare'].value_counts()
print("Distribuția claselor:")
print(counts)

if counts[0] == counts[1]:
    print("Clase balansate: perfect.")
else:
    print(f"Clase nebalansate: {counts[1]} promovati vs {counts[0]} nepromovati.")

X_mean = X.mean(axis=0)
X_std = X.std(axis=0)
X_scaled = (X - X_mean) / X_std

with pm.Model() as model_logistic:
    alpha = pm.Normal('alpha', mu=0, sigma=1)
    betas = pm.Normal('betas', mu=0, sigma=1, shape=2)
    mu = alpha + pm.math.dot(X_scaled, betas)
    theta = pm.math.sigmoid(mu)

    y_obs = pm.Bernoulli('y_obs', p=theta, observed=y)

    idata = pm.sample(1000, tune=1000, target_accept=0.95, return_inferencedata=True, progressbar=True)

print("\nRezumatul Modelului:")
print(az.summary(idata, var_names=['alpha', 'betas']))

print("\n--- EXERCIȚIUL B ---")

alpha_mean = idata.posterior['alpha'].mean().item()
beta_studiu_mean = idata.posterior['betas'].mean(dim=["chain", "draw"])[0].item()
beta_somn_mean = idata.posterior['betas'].mean(dim=["chain", "draw"])[1].item()

print(f"Coef. Ore Studiu (Standardizat): {beta_studiu_mean:.4f}")
print(f"Coef. Ore Somn (Standardizat): {beta_somn_mean:.4f}")

x_plot = np.linspace(df['Ore_Studiu'].min(), df['Ore_Studiu'].max(), 100)
x_plot_scaled = (x_plot - X_mean[0]) / X_std[0]

boundary_scaled = -(alpha_mean + beta_studiu_mean * x_plot_scaled) / beta_somn_mean

y_boundary = boundary_scaled * X_std[1] + X_mean[1]

plt.figure(figsize=(10, 6))

plt.scatter(df[df['Promovare']==0]['Ore_Studiu'], df[df['Promovare']==0]['Ore_Somn'],
            color='red', label='Nepromovat (0)', alpha=0.6)
plt.scatter(df[df['Promovare']==1]['Ore_Studiu'], df[df['Promovare']==1]['Ore_Somn'],
            color='blue', label='Promovat (1)', alpha=0.6)

plt.plot(x_plot, y_boundary, color='black', linewidth=2, label='Granița de decizie')

plt.xlabel('Ore Studiu pe Săptămână')
plt.ylabel('Ore Somn pe Zi')
plt.legend()
plt.title('Regresie Logistică Bayesiană - Granița de Decizie')
plt.grid(True, alpha=0.3)
plt.show()

print("Interpretare: Linia neagră separă datele roșii de albastre, indicând o bună separare.")
print("\n--- EXERCIȚIUL C ---")

infl_studiu = abs(beta_studiu_mean)
infl_somn = abs(beta_somn_mean)

print(f"Influență Studiu: {infl_studiu:.4f}")
print(f"Influență Somn:   {infl_somn:.4f}")

if infl_studiu > infl_somn:
    print("Concluzie: Orele de STUDIU influențează mai mult.")
elif infl_somn > infl_studiu:
    print("Concluzie: Orele de SOMN influențează mai mult.")
else:
    print("Concluzie: Ambele variabile influențează la fel.")
