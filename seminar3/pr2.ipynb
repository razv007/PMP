import numpy as np
from scipy import stats

def simulare_joc_monede(numar_simulari=10000):
    castiguri_starter = 0
    castiguri_second = 0
    p_fair = 0.5
    
    for _ in range(numar_simulari):
        starter_id = np.random.choice([0, 1])
        n = np.random.binomial(n=1, p=p_fair)
        nr_aruncari_runda2 = n + 1
        m = np.random.binomial(n=nr_aruncari_runda2, p=p_fair)
        if n >= m:
            castiguri_starter += 1
        else:
            castiguri_second += 1
            
    prob_starter = castiguri_starter / numar_simulari
    prob_second = castiguri_second / numar_simulari
    
    print(f"Rezultate Simulare ({numar_simulari} jocuri):")
    print(f"Șansa de câștig a jucătorului care ÎNCEPE (Starter): {prob_starter:.4f}")
    print(f"Șansa de câștig a jucătorului de pe LOCUL 2:       {prob_second:.4f}")
    
    if prob_starter > prob_second:
        print("=> Concluzie: Jucătorul care începe are șansele cele mai mari.")
    else:
        print("=> Concluzie: Jucătorul al doilea are șansele cele mai mari.")

simulare_joc_monede()


from pgmpy.models import DiscreteBayesianNetwork
from pgmpy.factors.discrete import TabularCPD
from pgmpy.inference import VariableElimination

model = DiscreteBayesianNetwork([('Starter', 'n'), ('n', 'm')])
cpd_starter = TabularCPD(variable='Starter', variable_card=2, values=[[0.5], [0.5]],
                         state_names={'Starter': ['J0', 'J1']})

cpd_n = TabularCPD(variable='n', variable_card=2,
                   values=[[0.5, 0.5],
                           [0.5, 0.5]],
                   evidence=['Starter'], evidence_card=[2],
                   state_names={'n': [0, 1], 'Starter': ['J0', 'J1']})

cpd_m = TabularCPD(variable='m', variable_card=3,
                   values=[[0.5, 0.25],  # m=0
                           [0.5, 0.50],  # m=1
                           [0.0, 0.25]], # m=2
                   evidence=['n'], evidence_card=[2],
                   state_names={'m': [0, 1, 2], 'n': [0, 1]})

model.add_cpds(cpd_starter, cpd_n, cpd_m)
print("Model valid:", model.check_model())



infer = VariableElimination(model)

result = infer.query(variables=['Starter'], evidence={'m': 1})

print("Probabilități pentru Starter știind că m=1:")
print(result)

prob_j0 = result.values[0]
prob_j1 = result.values[1]

if abs(prob_j0 - prob_j1) < 0.001:
    print(f"\nConcluzie: Este la fel de probabil să fi început J0 ({prob_j0:.2f}) sau J1 ({prob_j1:.2f}).")
elif prob_j0 > prob_j1:
    print(f"\nConcluzie: Este mai probabil să fi început J0 ({prob_j0:.4f}).")
else:
    print(f"\nConcluzie: Este mai probabil să fi început J1 ({prob_j1:.4f}).")
