import numpy as np
from hmmlearn import hmm
#a
stari=["Walking","Running","Resting"]
map_stari={"W":0,"R":1,"S":2}
obs=["Low","Medium","High"]
obs_map={"L":0,"M":1,"H":2}
start_prob = np.array([0.4,0.3,0.3])
trans_mat = np.array([
    [0.6, 0.3, 0.1],
    [0.2, 0.7, 0.1],
    [0.3, 0.3, 0.4]
])
e_prob = np.array([
    [0.1, 0.7, 0.2],
    [0.05, 0.25, 0.7],
    [0.8, 0.15, 0.05]
])
model = hmm.CategoricalHMM(n_components=3, random_state=42)
model.startprob_=start_prob
model.transmat_=trans_mat
model.emissionprob_=e_prob
print("Model HMM definit cu succes.\n")
#b
obs_tipuri=["M", "H", "L"]
obs_secventa = np.array([[obs_map[o] for o in obs_tipuri]]).T
log_prob = model.score(obs_secventa)
prob = np.exp(log_prob)
print(f"Secventa observata:{obs_tipuri}")
print(f"Log-Probabilitatea secventei: {log_prob:.4f}")
print(f"Probabilitatea secventei: {prob:.6f}\n")
#c
log_prob_path, path_indices = model.decode(obs_secventa)
path_stari = [stari[i] for i in path_indices]
print(f"Cea mai probabila secventa de stari: {path_stari}")
print(f"Log-Probabilitatea caii: {log_prob_path:.4f}\n")
#d
nr_sim=10000
seq_lg=3
target_seq = np.array([1, 2, 0])
cnt=0
for i in range(nr_sim):
    X, Z = model.sample(n_samples=seq_lg)
    if np.array_equal(X, target_seq):
        cnt+=1
e_prob=cnt/nr_sim
print(f"Numar simulari: {nr_sim}")
print(f"Aparitii secventa [M, H, L]:{cnt}")
print(f"Probabilitate empirica: {e_prob:.6f}")
print(f"Diferenta:{abs(e_prob - prob):.6f}")
