from pgmpy.models import DiscreteBayesianNetwork
from pgmpy.factors.discrete import TabularCPD
from pgmpy.inference import VariableElimination
import numpy as np

model = DiscreteBayesianNetwork([('O','H'),('O','W'),('H','R'), ('W','R'),('H','E'),('R','C')])
cpd_o = TabularCPD(variable='O', variable_card=2,
                   values=[[0.3], [0.7]])

cpd_h = TabularCPD(variable='H', variable_card=2,
                   values=[[0.9, 0.2],
                           [0.1, 0.8]],
                   evidence=['O'], evidence_card=[2])

cpd_w = TabularCPD(variable='W', variable_card=2,
                   values=[[0.1, 0.6],
                           [0.9, 0.4]],
                   evidence=['O'], evidence_card=[2])
cpd_r = TabularCPD(variable='R', variable_card=2,
                   values=[[0.6, 0.9, 0.3, 0.5],
                           [0.4, 0.1, 0.7, 0.5]],
                   evidence=['H', 'W'], evidence_card=[2, 2])

cpd_e = TabularCPD(variable='E', variable_card=2,
                   values=[[0.8, 0.2],
                           [0.2, 0.8]],
                   evidence=['H'], evidence_card=[2])

cpd_c = TabularCPD(variable='C', variable_card=2,
                   values=[[0.85, 0.40],
                           [0.15, 0.60]],
                   evidence=['R'], evidence_card=[2])

model.add_cpds(cpd_o, cpd_h, cpd_w, cpd_r, cpd_e, cpd_c)

assert model.check_model()
print("Modelul a fost definit corect.\n")

infer = VariableElimination(model)

q1 = infer.query(variables=['H'], evidence={'C': 0})
print("P(H | C=comfortable):")
print(q1)
print(f"P(H=yes | C=comfortable) = {q1.values[0]:.6f}\n")

q2 = infer.query(variables=['E'], evidence={'C': 0})
print("P(E | C=comfortable):")
print(q2)
print(f"P(E=high | C=comfortable) = {q2.values[0]:.6f}\n")

q3 = infer.map_query(variables=['H', 'W'], evidence={'C': 0})
h_map = "yes" if q3['H'] == 0 else "no"
w_map = "yes" if q3['W'] == 0 else "no"
print(f"Estimare Map pentru (H, W) cand C=comfortable: H={h_map}, W={w_map}")
